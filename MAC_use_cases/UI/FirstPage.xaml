<modulesUI:BaseEditor x:Class="MAC_use_cases.UI.FirstPage"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:modulesUI="clr-namespace:Siemens.Automation.ModularApplicationCreator.Modules.UI;assembly=Siemens.Automation.ModAppCreator.Core"
                      xmlns:model="clr-namespace:MAC_use_cases.Model"
                      xmlns:helper="clr-namespace:Siemens.Automation.ModularApplicationCreator.Tia.Helper;assembly=Siemens.Automation.ModAppCreator.Core"
                      mc:Ignorable="d"
                      d:Background="White">

    <Grid VerticalAlignment="Top" Margin="30"
          d:DataContext="{d:DesignInstance Type=model:MAC_use_casesEM, IsDesignTimeCreatable=True}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Row 0 -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                   Text="{DynamicResource SampleText}"
                   Margin="5" />

        <!-- Row 1 -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Drive Object Browser:" Margin="5" />
        <helper:DOBrowser Grid.Row="1" Grid.Column="1"
                          TOInfo="{Binding MyTo.TechnologicalObject}"
                          Margin="5"
                          HorizontalAlignment="Left" />

        <!-- Row 2 -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="List of example Models:"
                   Margin="5" />
        <TextBlock Grid.Row="2" Grid.Column="1"
                   Text="{Binding NonTiaProjectBased.StringOfAllNames}"
                   Margin="5" />

        <!-- Row 3 -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Name FB:"
                   Margin="5" />
        <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding NameOfMyFb}"
                 Width="400"
                 HorizontalAlignment="Left"
                 Margin="5" />

        <!-- Row 4 -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="Name F-FB:"
                   Margin="5" />
        <TextBox Grid.Row="4" Grid.Column="1"
                 Text="{Binding NameOfMyFailSafeFb}"
                 Width="400"
                 HorizontalAlignment="Left"
                 Margin="5" />

        <!-- Row 5: RTU Settings -->
        <GroupBox Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="3" Header="RTU Project Setpoints" Margin="5" FontWeight="Bold">
            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Temperature Setpoints -->
                <Label Grid.Row="0" Grid.Column="0" Content="Occupied Cooling SP (°C):" Margin="5" />
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding RtuSettings.OccupiedCoolingSetpoint, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="1" Grid.Column="0" Content="Occupied Heating SP (°C):" Margin="5" />
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding RtuSettings.OccupiedHeatingSetpoint, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="2" Grid.Column="0" Content="Unoccupied Cooling SP (°C):" Margin="5" />
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding RtuSettings.UnoccupiedCoolingSetpoint, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="3" Grid.Column="0" Content="Unoccupied Heating SP (°C):" Margin="5" />
                <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding RtuSettings.UnoccupiedHeatingSetpoint, Mode=TwoWay}" Width="100" Margin="5" />

                <!-- Timer Delays -->
                <Label Grid.Row="0" Grid.Column="2" Content="Fan Failure Delay:" Margin="20,5,5,5" />
                <TextBox Grid.Row="0" Grid.Column="3" Text="{Binding RtuSettings.FanFailureDelay, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="1" Grid.Column="2" Content="Compressor Min Run Time:" Margin="20,5,5,5" />
                <TextBox Grid.Row="1" Grid.Column="3" Text="{Binding RtuSettings.CompressorMinRunTime, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="2" Grid.Column="2" Content="Compressor Min Off Time:" Margin="20,5,5,5" />
                <TextBox Grid.Row="2" Grid.Column="3" Text="{Binding RtuSettings.CompressorMinOffTime, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="3" Grid.Column="2" Content="Dirty Filter Delay:" Margin="20,5,5,5" />
                <TextBox Grid.Row="3" Grid.Column="3" Text="{Binding RtuSettings.DirtyFilterDelay, Mode=TwoWay}" Width="100" Margin="5" />

                <!-- Damper Settings -->
                <Label Grid.Row="4" Grid.Column="0" Content="Min Fresh Air Position (%):" Margin="5" />
                <TextBox Grid.Row="4" Grid.Column="1" Text="{Binding RtuSettings.MinFreshAirPosition, Mode=TwoWay}" Width="100" Margin="5" />
                <Label Grid.Row="4" Grid.Column="2" Content="Economizer Temp Diff (°C):" Margin="20,5,5,5" />
                <TextBox Grid.Row="4" Grid.Column="3" Text="{Binding RtuSettings.EconomizerTempDifferential, Mode=TwoWay}" Width="100" Margin="5" />
            </Grid>
        </GroupBox>

        <!-- Row 6 -->
        <TextBlock Grid.Row="6" Grid.Column="0"
                   Text="Generate Hardware:"
                   Margin="5" />
        <CheckBox Grid.Row="6" Grid.Column="1"
                  HorizontalAlignment="Left"
                  Margin="5"
                  IsChecked="{Binding IsGenerateHardwareChecked}" />

        <!-- Row 7 -->
        <TextBlock Grid.Row="7" Grid.Column="0"
                   Text="Generate Hardware based on Excel:"
                   Margin="5" />
        <TextBox Grid.Row="7" Text="{Binding HardwareGenerationExcelBasedViewModel.ImportSource}" Grid.Column="1"
                 Width="550"
                 HorizontalAlignment="Left"
                 IsReadOnly="True" Margin="5" />
        <Button Grid.Row="7" Content="Browse File" Grid.Column="2"
                Width="125" Height="32" Margin="0,0,0,0" x:Name="BtnBrowse"
                Command="{Binding HardwareGenerationExcelBasedViewModel.BrowseImportFile}" VerticalAlignment="Center"
                HorizontalAlignment="Left" />

        <!-- Row 8: Generate RTU Project -->
        <Button Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2"
                x:Name="GenerateRtuButton"
                Content="Generate Basic RTU Project"
                Click="GenerateRtuButton_Click"
                Margin="5,20,5,5"
                Padding="10"
                HorizontalAlignment="Left"
                FontWeight="Bold" />
    </Grid>
</modulesUI:BaseEditor>
