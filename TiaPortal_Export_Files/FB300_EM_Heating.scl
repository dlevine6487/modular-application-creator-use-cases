FUNCTION_BLOCK "FB300_EM_Heating"
{
    S7_Optimized_Access := 'TRUE'
}
AUTHOR : 'Dallas Levine & Gemini'
VERSION : '1.0'

VAR_INPUT
    // Enables the block's execution.
    Enable : Bool;
    
    // Analog heating demand (0.0 - 100.0%) from the main temperature controller.
    Valve_Demand_In : Real;
END_VAR

VAR
    // The data interface for the Heating Equipment Module.
    UDT : "UDT300_EM_Heating";

    // Internal timer for the valve feedback failure delay.
    feedbackFaultTimer : TON_TIME;
END_VAR

BEGIN
    //================================================================================
    // REGION 1: Main Execution Logic
    //================================================================================
    IF #Enable THEN
    
        //----------------------------------------------------------------------------
        // SUB-REGION 1.1: Safety Monitoring (Highest Priority)
        // A freeze stat trip must immediately override all other logic and
        // force the valve closed to prevent coil damage.
        //----------------------------------------------------------------------------
        
        IF #UDT.HW_Freeze_Stat_DI THEN
            // A freeze condition is detected.
            #UDT.HW_Freeze_Alm := TRUE;      // Set the freeze alarm bit.
            #UDT.HW_Valve_Cmd_AO := 0.0;     // CRITICAL: Force the valve command to 0%.
            #UDT.Valve_Failure_Alm := FALSE;  // Reset failure alarm during freeze condition.
            
        ELSE
            //------------------------------------------------------------------------
            // SUB-REGION 1.2: Normal Operation
            // If no safety faults are active, operate normally.
            //------------------------------------------------------------------------
            
            #UDT.HW_Freeze_Alm := FALSE;     // Ensure the alarm is clear.
            
            // Pass the incoming analog demand directly to the analog output command.
            #UDT.HW_Valve_Cmd_AO := #Valve_Demand_In;
            
            //------------------------------------------------------------------------
            // SUB-REGION 1.3: Feedback Failure Monitoring
            // Compares the valve command with the feedback to detect a fault.
            //------------------------------------------------------------------------

            #feedbackFaultTimer(
                IN := ABS(REAL_TO_LREAL(#UDT.HW_Valve_Cmd_AO) - REAL_TO_LREAL(#UDT.HW_Valve_Fdbk_AI)) > #UDT.Fault_Tolerance_Perc,
                PT := #UDT.Fault_Delay_Sec,
                Q => NOP,
                ET => NOP
            );

            IF #feedbackFaultTimer.Q THEN
                #UDT.Valve_Failure_Alm := TRUE;
            END_IF;

        END_IF;
        
    ELSE // This ELSE corresponds to "IF #Enable"
        //============================================================================
        // REGION 2: Disabled State Logic
        // If the block is disabled, force all outputs to a safe, off state.
        //============================================================================
        
        #UDT.HW_Valve_Cmd_AO := 0.0;
        #UDT.HW_Freeze_Alm := FALSE;
        #UDT.Valve_Failure_Alm := FALSE;
        
    END_IF;

END_FUNCTION_BLOCK